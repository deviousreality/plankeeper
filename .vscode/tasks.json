{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Development Server",
      "type": "shell",
      "command": "npm run dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "nuxi",
          "endsPattern": "Nuxt DevTools is available on"
        }
      }
    },
    {
      "label": "Reset Database",
      "type": "shell",
      "command": "npx tsx server/scripts/resetDb.ts",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Build for Production",
      "type": "shell",
      "command": "npm run build",
      "group": "build",
      "problemMatcher": []
    },    {
      "label": "Start Preview Server",
      "type": "shell",
      "command": "npm run preview",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "TypeScript Type Check",
      "type": "shell",
      "command": "npm run typecheck",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "ESLint Check",
      "type": "shell",
      "command": "npm run lint",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "ESLint Fix",
      "type": "shell",
      "command": "npm run lint:fix",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Update Admin Password",
      "type": "shell",
      "command": "npm run update-admin-password",
      "group": "none", 
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Migrate Database",
      "type": "shell",
      "command": "npx tsx server/scripts/addNewTables.ts",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Verify Database Schema",
      "type": "shell",
      "command": "npm run verify-db",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
